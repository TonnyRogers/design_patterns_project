{
    "compilerOptions": {
        "target": "ES2019",
        "module": "CommonJS",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true, 
        "allowJs": true,  
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": ["node_modules"]
}